{
    "rules": {
        "class-name": true,
        "comment-format": [true, "check-space"],
        "curly": true,
        "eofline": true,
        "indent": "spaces",
        "interface-name": "always-prefix",
        "jsdoc-format": true,
        "max-line-length": 120,
        "no-any": true,
        "no-arg": true,
        "no-consecutive-blank-lines": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-internal-module": true,
        "no-invalid-this": true,
        "no-mergeable-namespace": true,
        "no-trailing-whitespace": true,
        "no-unreachable": true,
        "no-unused-expression": true,
        "no-unused-variable": true, 
        "no-use-before-declare": true,  
        "no-var-keyword": true,
        "no-var-requires": true,
        "one-line": [true, "check-catch", "check-else"],
        "only-arrow-functions": true,
        "quotemark": [true, "single"],
        "semicolon": "never",
        "switch-default": true,
        "triple-equals": true,
        "use-isnan": true,
        "use-strict": [true],
        "variable-name": "check-format",
        "whitespace": [true, 
            "check-branch", 
            "check-operator", 
            "check-separator",
            "check-type",
            "check-module"
        ]
    }
}